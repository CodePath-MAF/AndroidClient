<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlGoalData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <TextView
            android:id="@+id/tvTotalPaymentLabel"
            style="@style/DashboardSmallText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/label_payment"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvTotalPayment"
            style="@style/DashboardLargeAmount"
            android:layout_alignLeft="@+id/tvTotalPaymentLabel"
            android:layout_below="@+id/tvTotalPaymentLabel"
            android:text="@string/sample_total_payment"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvDueDateLabel"
            style="@style/DashboardSmallText"
            android:layout_alignBaseline="@+id/tvTotalPaymentLabel"
            android:layout_alignBottom="@+id/tvTotalPaymentLabel"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text="@string/label_due_date"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/tvDueDate"
            style="@style/DashboardMediumAmount"
            android:layout_alignRight="@+id/tvDueDateLabel"
            android:layout_alignTop="@+id/tvTotalPayment"
            android:text="@string/sample_due_date"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvDueDateHuman"
            style="@style/DashboardSmallText"
            android:layout_alignRight="@+id/tvDueDate"
            android:layout_below="@+id/tvDueDate"
            android:text="@string/sample_due_date_human"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llFinalTarget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <RelativeLayout
            android:id="@+id/rlFinalTargetData"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvTotalTargetLabel"
                style="@style/DashboardSmallText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/label_receive"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvTotalTargetPayment"
                style="@style/DashboardLargeAmount"
                android:layout_alignLeft="@+id/tvTotalTargetLabel"
                android:layout_below="@+id/tvTotalTargetLabel"
                android:text="@string/sample_total_payment"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/tvTargetDateLabel"
                style="@style/DashboardSmallText"
                android:layout_alignBaseline="@+id/tvTotalTargetLabel"
                android:layout_alignBottom="@+id/tvTotalTargetLabel"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="@string/label_due_date"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <TextView
                android:id="@+id/tvTargetDate"
                style="@style/DashboardMediumAmount"
                android:layout_alignRight="@+id/tvTargetDateLabel"
                android:layout_alignTop="@+id/tvTotalTargetPayment"
                android:text="@string/sample_due_date"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/tvTargetDateHuman"
                style="@style/DashboardSmallText"
                android:layout_alignRight="@+id/tvTargetDate"
                android:layout_below="@+id/tvTargetDate"
                android:text="@string/sample_due_date_human"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/pbGoalProgress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="50" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPastPayments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/bg_card"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <ListView
            android:id="@+id/lvPastPayments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
    </LinearLayout>

</LinearLayout>