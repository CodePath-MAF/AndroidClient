<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlLiquidAsset"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/app_green" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvLiquidAsset"
                style="@style/DashboardUI.TotalCash.Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_remaining_amount" />

            <TextView
                android:id="@+id/tvLiquidAssetLabel"
                style="@style/DashboardUI.TotalCash.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_total_cash_label" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_rightarrow_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llMetrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:divider="?android:dividerHorizontal"
        android:gravity="center"
        android:padding="10dp"
        android:showDividers="middle" >

        <LinearLayout
            android:id="@+id/llMonthlyGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMonthlyGoalsLabel"
                style="@style/DashboardUI.AggregateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_monthly_goals_label" />

            <TextView
                android:id="@+id/tvMonthlyGoals"
                style="@style/DashboardUI.AggregateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_spent_today" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSpentToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvSpentTodayLabel"
                style="@style/DashboardUI.AggregateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_spent_today_label" />

            <TextView
                android:id="@+id/tvSpentToday"
                style="@style/DashboardUI.AggregateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_spent_today" />
        </LinearLayout>
    </LinearLayout>

    <fragment
        android:id="@+id/goalListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="org.missionassetfund.apps.android.fragments.GoalsListFragment"
        tools:layout="@layout/fragment_goals_list" >
    </fragment>

</LinearLayout>