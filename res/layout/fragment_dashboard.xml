<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlLiquidAsset"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/app_green" >

        <LinearLayout
            android:id="@+id/llTotalCashProgress"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <ProgressBar
                android:id="@+id/pbTotalCashLoading"
                style="@android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llTotalCash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tvLiquidAsset"
                style="@style/DashboardUI.TotalCash.Amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_remaining_amount" />

            <TextView
                android:id="@+id/tvLiquidAssetLabel"
                style="@style/DashboardUI.TotalCash.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dashboard_total_cash_label" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnTransactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_rightarrow_white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llAddTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:divider="?android:dividerHorizontal"
        android:gravity="center"
        android:padding="10dp"
        android:showDividers="middle" >

        <ImageButton
            android:id="@+id/btnAddTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_new_transaction_button" />

    </LinearLayout>

    <fragment
        android:id="@+id/goalListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="org.missionassetfund.apps.android.fragments.GoalsListFragment"
        tools:layout="@layout/fragment_goals_list" >
    </fragment>

</LinearLayout>