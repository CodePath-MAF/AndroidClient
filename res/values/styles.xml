<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="android:homeAsUpIndicator">@drawable/leftarrow_white_button</item>
    </style>

    <!-- TwoWayView Layout style -->
    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Custom SelectDate theme -->
    <style name="Theme.SelectDate" parent="AppBaseTheme">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Custom styles -->
    <style name="DashboardBoxTitle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LargeAmount" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MediumAmount" parent="@android:style/TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SmallText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darkgray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DashboardMediumText" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NewGoalDialog" parent="@android:style/Theme.Holo.Light.DialogWhenLarge.NoActionBar"></style>

    <!-- Dashboard UI -->
    <style name="DashboardUI" />
    
    <style name="DashboardUI.CashSpentChartTitle">
        <item name="android:textColor">@color/dashboard_cash_spent_chart_title_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="DashboardUI.TotalCash" />

    <style name="DashboardUI.TotalCash.Amount">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DashboardUI.TotalCash.Label">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DashboardUI.AggregateLabel">
        <item name="android:textColor">@color/dashboard_aggregate_label</item>
        <item name="android:textSize">13sp</item>
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
    </style>

    <style name="DashboardUI.AggregateValue">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
        <item name="android:textColor">@color/dashboard_aggregate_value</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DashboardUI.SpentToday">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
        <item name="android:textColor">@color/dashboard_spent_today_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DashboardUI.GoalItem" />

    <style name="DashboardUI.GoalItem.Name">
        <item name="android:textColor">@color/dashboard_goal_item_name_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="DashboardUI.GoalItem.Amount">
        <item name="android:textColor">@color/dashboard_goal_item_name_text</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    </style>

    <style name="DashboardUI.GoalItem.DueDate">
        <item name="android:textColor">@color/dashboard_goal_item_due_date_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawableLeft">@drawable/img_time_gray</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="DashboardUI.GoalItem.DueDateSoon">
        <item name="android:textColor">@color/dashboard_goal_item_due_date_soon_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:drawableLeft">@drawable/img_time_red</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="DashboardUI.GoalItem.Milestones">
        <item name="android:textColor">@color/dashboard_goal_item_milestones_text</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Transactions UI -->

    <style name="TransactionUI" />

    <style name="TransactionUI.SpentToday">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
        <item name="android:textColor">@color/dashboard_spent_today_text</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TransactionUI.AggregateLabel">
        <item name="android:textColor">@color/transactions_aggregate_label</item>
        <item name="android:textSize">13sp</item>
        <item name="fontPath">fonts/OpenSans-Light.ttf</item>
    </style>

    <style name="TransactionUI.AggregateValue">
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
        <item name="android:textColor">@color/transactions_aggregate_value</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TransactionUI.TransactionItem" />

    <style name="TransactionUI.TransactionItem.Name">
        <item name="android:textColor">@color/transactions_item_name_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TransactionUI.TransactionItem.Amount">
        <item name="android:textColor">@color/transactions_item_name_text</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    </style>

    <style name="TransactionUI.TransactionItem.NegativeAmount">
        <item name="android:textColor">@color/transactions_item_negative_amount_text</item>
        <item name="android:textSize">18sp</item>
        <item name="fontPath">fonts/OpenSans-Semibold.ttf</item>
    </style>

    <style name="TransactionUI.TransactionItem.Category">
        <item name="android:textColor">@color/transactions_item_category_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Add Transaction UI -->
    <style name="AddTransactionUI" />

    <style name="AddTransactionUI.InputItem.NameTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/add_transaction_input_item_display_name</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AddTransactionUI.InputItem.ValueTextView" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/add_transaction_input_item_display_value</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AddTransactionUI.InputListView">
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/app_green</item>
    </style>

    <style name="AddTransactionUI.AmountInput" />

    <style name="AddTransactionUI.AmountInput.AmountEditText">
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">@color/add_transaction_amount_display_value</item>
        <item name="android:textColorHint">@color/add_transaction_amount_hint_value</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AddTransactionUI.AmountInput.AmountSymbol">
        <item name="android:textSize">65sp</item>
        <item name="android:textColor">@color/add_transaction_amount_display_value</item>
    </style>

    <style name="AddTransactionUI.NameInput">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/add_transaction_name_display_value</item>
        <item name="android:textColorHint">@color/add_transaction_name_hint_value</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AddTransactionUI.CategoryInput">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/add_transaction_category_display_value</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AddTransactionUI.CategoryInput.Dropdown">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/add_transaction_category_dropdown_value</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Custom Input Fragments -->
    <style name="FrequencyUI" />

    <style name="FrequencyUI.TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/frequency_fragment_item_display_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FrequencyUI.TextView.Dropdown">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/frequency_fragment_item_dropdown_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Parse -->
    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/com_parse_ui_parse_login_button_background_selector</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
    </style>

    <!-- View page indicator -->
    <style name="CustomCirclePageIndicator">
        <item name="android:background">@color/white</item>
        <item name="pageColor">@color/lightgray</item>
        <item name="fillColor">@color/app_green</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

</resources>